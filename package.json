{
  "name": "typst-oxide",
  "displayName": "Typst Oxide",
  "description": "PKM for typst",
  "version": "0.2.0",
  "publisher": "observerw",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Language Packs"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "typst",
        "aliases": [
          "Typst",
          "typst"
        ],
        "extensions": [
          ".typ"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "typst-oxide.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "typst-oxide.refreshLinks",
        "title": "Refresh Links",
        "icon": "$(refresh)"
      },
      {
        "command": "typst-oxide.initRepository",
        "title": "Initialize Typst-Oxide Repository"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "typst-oxide.links",
          "name": "Wiki Links",
          "when": "resourceLangId == typst && typst-oxide.repositoryExists"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "typst-oxide",
          "title": "Typst Links",
          "icon": "$(link)",
          "when": "typst-oxide.repositoryExists"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "typst-oxide.refreshLinks",
          "when": "view == typst-oxide.links",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^5.2.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/observerw/typst-oxide-vscode.git"
  },
  "homepage": "https://github.com/observerw/typst-oxide-vscode",
  "keywords": [
    "typst",
    "wiki",
    "links",
    "navigation",
    "documentation"
  ],
  "dependencies": {
    "eta": "^3.5.0"
  }
}